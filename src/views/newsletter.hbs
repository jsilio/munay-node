<section class="pt-12 pb-6" style="background: rgb(232, 244, 245)">
    <div class="container">

        {{!-- Título y Descripción --}}
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-10 text-center">

                <h2 class="mb-5 display-3"> ¡Gracias por unirte! </h2>

                <p class="text-gray-700 mb-6 mb-md-7" style="font-size: 1.3rem;">
                    Recibirás nuestras últimas comunicaciones próximamente en tu correo electrónico.
                </p>

            </div> <!-- / .col-->
        </div> {{!-- / .row --}}

    </div> <!-- / .container -->
</section>

{{!-- Entradas --}}
<section class="pt-8 bg-light">
    <div class="container">

        <!-- Heading -->
        <h2 class="mb-5 font-weight-bold">
            Últimas entradas
        </h2>

        <!-- ||| Entradas del Blog ||| -->
        <div class="row">

            {{#each blogPost}}
            <!-- /// Entrada 1 /// -->
            <div class="col-12 col-lg-4 d-flex my-5">

                <!-- Card -->
                <div class="card mb-6 mb-lg-0 shadow-light-lg lift lift-lg">

                    <!-- Imagen -->
                    <a class="card-zoom" href="/blog/{{slug}}">
                        <img src="{{coverURL}}" alt="{{title}}" class="img-fluid card-img-top">
                    </a>

                    <!-- Shape -->
                    <div class="position-relative">
                        <div class="shape shape-fluid-x shape-bottom svg-shim text-white">
                            <svg viewBox="0 0 2880 48" fill="none">
                                <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor" />
                            </svg>
                        </div>
                    </div>

                    <!-- Body -->
                    <a class="card-body" href="/blog/{{slug}}">

                        <!-- Heading -->
                        <h3 style="font-size: 1.6rem;"> {{title}} </h3>

                        <!-- Text -->
                        <p class="mb-0 text-muted">
                            {{description}}
                        </p>
                    </a>

                    <!-- Meta -->
                    <a class="card-meta mt-auto" href="#!">

                        <!-- Divisor -->
                        <hr class="card-meta-divider">

                        <i class="fe fe-clock text-muted mr-2 mb-0"></i>

                        <h6 class="text-uppercase text-muted mr-2 mb-0"> 10 min. </h6>



                        <!-- Autor -->


                        <!-- Fecha -->
                        <p class="h6 text-uppercase text-muted mb-0 ml-auto">
                            {{date createdAt "MMM DD, YYYY"}}
                        </p>

                        <i class="fe fe-calendar text-muted ml-2 mb-1"></i>
                    </a>

                </div>

            </div>
            {{/each}}


        </div> <!-- / .row -->


    </div> <!-- / .row -->

    </div> <!-- / .container -->
</section>