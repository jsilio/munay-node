{{!-- << Formulario >> --}}



<section class="pt-10 pt-md-11 pb-8 pb-md-14 bg-info" style="background: rgb(147,203,202);
background: linear-gradient(0deg, rgba(147,203,202,1) 0%, rgba(177,219,225,1) 35%, rgba(229,243,245,1) 100%);">
    <div class="container">

        {{!-- Título y Descripción --}}
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-10 text-center">

                <div class="mb-5">
                    {{> messages }}
                </div>


                <h2 class="font-weight-bold mb-5 display-4"> Contacta con nosotros. </h2>

                <p class="font-size-lg text-gray-700 mb-6 mb-md-9">
                    En Munay no nos gusta que te quedes con dudas. Puedes dejarnos un mensaje contándonos tu situación y
                    nos pondremos en contacto contigo lo antes posible.
                </p>
            </div>
        </div> {{!-- / .row --}}

        {{!-- Form--}}
        <div class="row justify-content-between">

            <div class="col-12 col-md-6 order-2 order-md-1">
                <img src="/img/illustrations/personas.svg" class="img-fluid" alt="">
            </div>

            <div class="col-12 col-md-6 order-1 order-md-2 align-self-top">

                <form action="/enviar-email" method="POST">

                    {{!-- Formulario: Datos personales --}}
                    <div class="row">

                        {{!-- Nombre --}}
                        <div class="col-12">
                            <div class="form-group mb-5">

                                <label for="contactName" class="font-weight-bold font-size-lg">
                                    Nombre completo
                                </label>

                                <!-- Input -->
                                <input type="text" class="form-control" name="name" id="contactName"
                                    placeholder="Nombre" autofocus required>

                            </div>
                        </div>

                        {{!-- E-mail --}}
                        <div class="col-12">
                            <div class="form-group mb-5">

                                <label for="contactEmail" class="font-weight-bold font-size-lg">
                                    Correo eléctronico
                                </label>

                                <!-- Input -->
                                <input type="email" class="form-control" name="email" id="contactEmail"
                                    placeholder="correo@ejemplo.com" required>

                            </div>
                        </div>
                    </div> <!-- / .row -->

                    {{!-- Formulario: Información a tratar --}}
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group mb-5">

                                <label for="contactMessage" class="font-weight-bold font-size-lg">
                                    ¿En qué podemos ayudarte?
                                </label>

                                <!-- Input -->
                                <textarea class="form-control mb-3" id="contactMessage" name="message" rows="6"
                                    placeholder="Escríbenos tu mensaje" required></textarea>
                            </div>
                        </div>
                    </div> <!-- / .row -->

                    {{!-- Formulario: Privacidad y Submit --}}
                    <div class="form-group">

                        {{!-- Política de privacidad  --}}
                        <div class="form-check mb-4">

                            <label class="checkbox bounce form-check-label">
                                <input type="checkbox" id="defaultCheck1" required>
                                <svg viewBox="0 0 21 21">
                                    <polyline points="5 10.75 8.5 14.25 16 6"></polyline>
                                </svg>
                            </label>

                            {{!-- <input class="form-check-input" type="checkbox" id="defaultCheck1" required> --}}

                            <label class="form-check-label ml-2 font-size-lg" for="defaultCheck1">
                                Acepto la <a href="/politica-de-privacidad">política de privacidad.</a>
                            </label>
                        </div>

                        {{!-- Botón de enviar --}}
                        <button type="submit" class="btn btn-lg btn-primary lift font-size-lg">
                            Enviar <i class="fe fe-arrow-right ml-3"></i>
                        </button>

                    </div>

                </form>

            </div> <!-- / .col-->
        </div> <!-- / .row -->
    </div> <!-- / .container -->
</section>



