{{!-- << Formulario >> --}}

<section class="pt-8 pt-md-13 pb-8 pb-md-14 bg-info">
    <div class="container">

        {{!-- Título y Descripción --}}
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-10 text-center">
                <h2 class="font-weight-bold mb-5 display-4"> Contacta con nosotros. </h2>

                <p class="font-size-lg text-gray-700 mb-9">
                    En Munay no nos gusta que te quedes con dudas. Puedes dejarnos un mensaje contándonos tu situación y
                    nos pondremos en contacto contigo lo antes posible.
                </p>
            </div>
        </div> {{!-- / .row --}}

        {{!-- Form--}}
        <div class="row justify-content-between">

            <div class="col-12 col-md-6">
                <img src="/img/illustrations/personas.svg" class="img-fluid" alt="">
            </div>

            <div class="col-12 col-md-6 align-self-top">

                <form action="/enviar-email" method="POST">

                    {{!-- Formulario: Datos personales --}}
                    <div class="row">

                        {{!-- Nombre --}}
                        <div class="col-12">
                            <div class="form-group mb-5">

                                <label for="contactName" class="font-weight-bold font-size-lg">
                                    Nombre completo
                                </label>

                                <!-- Input -->
                                <input type="text" class="form-control" name="name" id="contactName" placeholder="Nombre completo" autofocus required>

                            </div>
                        </div>

                        {{!-- E-mail --}}
                        <div class="col-12">
                            <div class="form-group mb-5">

                                <label for="contactEmail" class="font-weight-bold font-size-lg">
                                    Correo eléctronico
                                </label>

                                <!-- Input -->
                                <input type="email" class="form-control" name="email" id="contactEmail" placeholder="correo@ejemplo.com" required>

                            </div>
                        </div>
                    </div> <!-- / .row -->

                    {{!-- Formulario: Información a tratar --}}
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group mb-5">

                                <label for="contactMessage" class="font-weight-bold font-size-lg">  
                                    ¿En qué podemos ayudarte?
                                </label>

                                <!-- Input -->
                                <textarea class="form-control mb-3" id="contactMessage" name="message" rows="6" placeholder="Escríbenos tu mensaje" required></textarea>
                            </div>
                        </div>
                    </div> <!-- / .row -->

                    {{!-- Formulario: Privacidad y Submit --}}
                    <div class="form-group">

                        {{!-- Política de privacidad  --}}
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" required>

                            <label class="form-check-label" for="defaultCheck1">
                                Acepto la <a href="/politica-de-privacidad">política de privacidad.</a>
                            </label>
                        </div>

                        {{!-- Botón de enviar --}}
                        <button type="submit" class="btn btn-lg btn-primary lift font-size-lg">
                            Enviar <i class="fe fe-arrow-right ml-3"></i>
                        </button>

                    </div>

                </form>

            </div> <!-- / .col-->
        </div> <!-- / .row -->
    </div> <!-- / .container -->
</section>



