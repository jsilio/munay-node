<!-- MAIN CONTENT
    ================================================== -->
<div class="main-content">
    <div class="container-fluid">
        <div class="row justify-content-center">

            <div class="col-12 col-lg-10 col-xl-8">

                {{!-- Título --}}
                <div class="header mt-md-5">
                    <div class="header-body">
                        <div class="row align-items-center">
                            <div class="col">

                                <h5 class="header-pretitle">
                                    <i class="fe fe-plus-circle mr-2"></i> Blog
                                </h5>


                                <h1 class="header-title">
                                    Editar entrada
                                </h1>

                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form -->
                <form action="/dashboard/blog/editar/{{blogPost._id}}?_method=PUT" method="POST" class="mb-4"
                    enctype="multipart/form-data">

                    <input type="hidden" name="_method" value="PUT">

                    <!-- Título de la entrada -->
                    <div class="form-group">

                        <label class="mb-3 h3"> Título </label>
                        <input type="text" class="form-control" name="title" value="{{ blogPost.title }}" required>

                    </div>

                    <!-- Descripción de la entrada -->
                    <div class="form-group mb-5">

                        <label class="mb-1 h3"> Descripción </label>

                        <small class="form-text text-muted">
                            Máximo: 180 caracteres.
                        </small>

                        <textarea name="description" class="form-control" maxlength="180" rows="3" style="resize: none;"
                            required>{{blogPost.description}}</textarea>

                    </div>


                    {{!-- Cover --}}
                    <div class="form-group mb-4">
                        <label class="mb-1 h3"> Cover </label>


                        <small class="form-text text-muted">
                            Formatos aceptados: jpg, jpeg, png.
                        </small>

                        <div class="avatar">
                            <img src="{{blogPost.coverURL}}" alt="{{blogPost.title}}"
                                class="avatar-img rounded">
                        </div>

                        <div class="input-group mt-3">
                            <div class="custom-file">
                                <input type="file" name="file" class="custom-file-input" id="inputGroupFile01"
                                    aria-describedby="inputGroupFileAddon01">
                                <label class="custom-file-label" for="inputGroupFile01">Selecciona la imagen</label>
                            </div>
                        </div>

                    </div>


                    {{!-- Divider --}}
                    <hr class="my-5">

                    {{!-- Contenido --}}
                    <div class="form-group mb-6">

                        <label for="content" class="h3 mb-3"> Contenido </label>

                        <textarea name="content" id="editor">{{blogPost.content}}</textarea>


                    </div>



                    {{!-- Botones --}}
                    <div class="form-group">

                        <button type="submit" class="btn btn-block btn-primary">
                            Editar entrada
                        </button>

                        <a href="/dashboard/blog" class="btn btn-block btn-link text-muted">
                            Cancelar
                        </a>
                    </div>

                </form>
            </div>

        </div>
    </div> <!-- / .main-content -->