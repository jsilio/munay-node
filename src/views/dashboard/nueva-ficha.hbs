<div class="main-content" id="nuevaFicha">
    <div class="container-fluid">
        <div class="row justify-content-center">

            <div class="col-12 col-lg-10 col-xl-8">

                {{!-- Header --}}
                <div class="header mt-md-5">

                    {{>messages}}

                    <div class="header-body">

                        <div class="row align-items-center">
                            <div class="col">

                                {{!-- Pretítulo --}}
                                <h5 class="header-pretitle">
                                    <i class="fe fe-user-plus mr-2"></i> Pacientes
                                </h5>

                                {{!-- Título --}}
                                <h1 class="header-title">
                                    Crear nueva ficha
                                </h1>

                            </div>
                        </div> <!-- / .row -->

                        {{!-- Nav tabs --}}
                        <div class="row align-items-center">

                            <div class="col">
                                <ul class="nav nav-tabs nav-overflow header-tabs" id="patientTab" role="tablist">

                                    {{!-- General --}}
                                    <li class="nav-item">
                                        <a href="#wizardStepOne" class="nav-link active" id="general-tab"
                                            data-toggle="tab" role="tab" aria-controls="general" aria-selected="true">
                                            General
                                        </a>
                                    </li>

                                    {{!-- Evaluación --}}
                                    <li class="nav-item">
                                        <a href="#wizardStepTwo" class="nav-link" id="evaluacion-tab" data-toggle="tab"
                                            role="tab" aria-controls="evaluacion" aria-selected="false">
                                            Evaluación
                                        </a>
                                    </li>

                                </ul>
                            </div>

                        </div> <!-- / .row -->
                    </div> <!-- / .header-body -->
                </div> <!-- / .header -->


                {{!-- Form --}}
                <form action="/dashboard/pacientes/nueva-ficha" method="POST" class="tab-content mb-4" id="wizardSteps">

                    {{!-- General --}}
                    <div class="tab-pane fade show active" id="wizardStepOne" role="tabpanel"
                        aria-labelledby="wizardTabOne">

                        <div class="row">

                            {{!-- Nombre --}}
                            <div class="col-12 col-lg-4">
                                <div class="form-group">
                                    <label> Nombre </label>

                                    <input type="text" class="form-control" name="firstName" required autofocus>
                                </div>
                            </div>

                            {{!-- Apellidos --}}
                            <div class="col-12 col-lg-6">
                                <div class="form-group">
                                    <label> Apellidos </label>

                                    <input type="text" class="form-control" name="lastName" required>
                                </div>
                            </div>

                            {{!-- Género --}}
                            <div class="col-12 col-lg-2">
                                <label for="genero"> Género </label>

                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" name="genero" id="masculino"
                                        value="masculino">
                                    <label class="custom-control-label" for="masculino">Masculino</label>
                                </div>

                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" name="genero" id="femenino"
                                        value="femenino">
                                    <label class="custom-control-label" for="femenino">Femenino</label>
                                </div>
                            </div>

                            {{!-- Fecha de nacimiento --}}
                            <div class="col-12 col-lg-3">
                                <div class="form-group">
                                    <label> <i class="fe fe-calendar mr-2"></i> Fecha de nacimiento </label>

                                    <input type="date" class="form-control" name="birthdate">
                                </div>
                            </div>

                            {{!-- Correo electrónico --}}
                            <div class="col-12 col-lg-5">
                                <div class="form-group">
                                    <label> <i class="fe fe-mail mr-2"></i> Correo electrónico </label>

                                    <input type="email" class="form-control" name="email" required>
                                </div>
                            </div>

                            {{!-- Teléfono --}}
                            <div class="col-12 col-lg-4">
                                <div class="form-group">
                                    <label for="phone">
                                        <i class="fe fe-phone mr-2"></i> Teléfono
                                    </label>

                                    <input type="tel" id="phone" class="form-control" name="phone">
                                </div>
                            </div>

                            {{!-- Lugar de nacimiento --}}
                            <div class="col-12 col-lg-6">
                                <div class="form-group">
                                    <label> <i class="fe fe-map mr-2"></i> Lugar de nacimiento</label>

                                    <input type="text" class="form-control" name="birthplace">
                                </div>
                            </div>

                            {{!-- Lugar de residencia --}}
                            <div class="col-12 col-lg-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fe fe-map-pin mr-2"></i> Lugar de residencia
                                    </label>

                                    <input type="text" class="form-control" name="residence">
                                </div>
                            </div>

                            {{!-- Resumen breve --}}
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="mb-1">
                                        <i class="fe fe-clipboard"></i> Resumen
                                    </label>

                                    <small class="form-text text-muted">
                                        Breve recopilación de datos del paciente
                                    </small>

                                    <textarea name="summary" class="form-control" data-toggle="autosize"></textarea>
                                </div>
                            </div>

                        </div> <!-- / .row -->

                    </div>

                    {{!-- Evaluación --}}
                    <div class="tab-pane fade" id="wizardStepTwo" role="tabpanel" aria-labelledby="wizardTabTwo">

                        {{!-- Entrevista general --}}
                        <h2 class="text-uppercase text-primary my-4">
                            <i class="fe fe-book mr-2"></i> Entrevista General
                        </h2>

                        {{!-- Acordeón --}}
                        <div id="accordion" class="font-size-lg mb-4">

                            {{!-- Motivo de consulta --}}
                            <div class="card">
                                <div class="card-header" id="consultationReason" data-toggle="collapse"
                                    data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                    <h4 class="mb-0 text-uppercase" style="cursor: pointer; letter-spacing: 0.06rem;">
                                        Motivo de Consulta
                                    </h4>

                                    <i class="fe fe-chevron-down ml-auto text-secondary" style="cursor: pointer;"></i>
                                </div>

                                <div id="collapseOne" class="collapse" aria-labelledby="consultationReason"
                                    data-parent="#accordion">

                                    <div class="card-body">

                                        <div class="row">

                                            {{!-- Descripción el problema --}}
                                            <div class="col-12">
                                                <div class="form-group">

                                                    <label for="problemDescription">Descripción del problema</label>
                                                    <textarea name="problemDescription" id="problemDescription"
                                                        class="form-control" data-toggle="autosize"></textarea>

                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="form-group">

                                                    <label>Inicio y curso</label>
                                                    <textarea name="startCourse" id="startCourse" class="form-control"
                                                        data-toggle="autosize"></textarea>

                                                </div>
                                            </div>

                                        </div>

                                    </div>

                                </div>
                            </div>

                            {{!-- Datos sociodemográficos --}}
                            <div class="card">

                                <div class="card-header" id="sociodemographicData" data-toggle="collapse"
                                    data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    <h4 class="mb-0 text-uppercase" style="cursor: pointer; letter-spacing: 0.06rem;">
                                        Datos Sociodemográficos
                                    </h4>

                                    <i class="fe fe-chevron-down ml-auto text-secondary" style="cursor: pointer;"></i>
                                </div>

                                <div id="collapseTwo" class="collapse" aria-labelledby="sociodemographicData"
                                    data-parent="#accordion">
                                    <div class="card-body">

                                        <div class="row">

                                            {{!-- Formación educativa --}}
                                            <div class="col-12 col-lg-6">
                                                <div class="form-group">
                                                    <label> Formación educativa </label>
                                                    <input type="text" name="education" class="form-control">
                                                </div>
                                            </div>

                                            {{!-- Situación laboral --}}
                                            <div class="col-12 col-lg-6">
                                                <div class="form-group">
                                                    <label> Situación laboral </label>
                                                    <input type="text" name="workStatus" class="form-control">
                                                </div>
                                            </div>

                                            {{!-- Historia laboral --}}
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label> Historia laboral </label>
                                                    <textarea name="workHistory" class="form-control"
                                                        data-toggle="autosize"></textarea>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>

                            {{!-- Datos familiares --}}
                            <div class="card">
                                <div class="card-header" id="familyData" data-toggle="collapse"
                                    data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    <h4 class="mb-0 text-uppercase" style="cursor: pointer; letter-spacing: 0.06rem;">
                                        Datos Familiares
                                    </h4>

                                    <i class="fe fe-chevron-down ml-auto text-secondary" style="cursor: pointer;"></i>
                                </div>

                                <div id="collapseThree" class="collapse" aria-labelledby="familyData"
                                    data-parent="#accordion">
                                    <div class="card-body">

                                        <div class="row">

                                            {{!-- Datos de interés --}}
                                            <div class="col-12">

                                                <div class="form-group">
                                                    <label> Datos de interés </label>
                                                    <textarea name="interestData" id="interestData" class="form-control"
                                                        data-toggle="autosize"></textarea>
                                                </div>

                                            </div>

                                            {{!-- Estado civil --}}
                                            <div class="col-12 col-lg-6">
                                                <div class="form-group">
                                                    <label> Estado civil </label>
                                                    <input type="text" name="maritalStatus" class="form-control">
                                                </div>
                                            </div>

                                            {{!-- Pareja --}}
                                            <div class="col-12 col-lg-6">
                                                <div class="form-group">
                                                    <label> Pareja </label>
                                                    <input type="text" name="partner" class="form-control">
                                                </div>
                                            </div>

                                            {{!-- Formacion educativa de la pareja --}}
                                            <div class="col-12 col-lg-6">
                                                <div class="form-group">
                                                    <label> Formación educativa de la pareja </label>
                                                    <input type="text" name="partnerEducation" class="form-control">
                                                </div>
                                            </div>

                                            {{!-- Situación laboral de la pareja --}}
                                            <div class="col-12 col-lg-6">
                                                <div class="form-group">
                                                    <label> Situación laboral de la pareja </label>
                                                    <input type="text" name="partnerWork" class="form-control">
                                                </div>
                                            </div>

                                        </div> <!-- / .row -->

                                    </div>
                                </div>
                            </div>

                            {{!-- Área psicosocial --}}
                            <div class="card">
                                <div class="card-header" id="psychosocialArea" data-toggle="collapse"
                                    data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                    <h4 class="mb-0 text-uppercase" style="cursor: pointer; letter-spacing: 0.06rem;">
                                        Área psicosocial
                                    </h4>

                                    <i class="fe fe-chevron-down ml-auto text-secondary" style="cursor: pointer;"></i>
                                </div>

                                <div id="collapseFour" class="collapse" aria-labelledby="psychosocialArea"
                                    data-parent="#accordion">
                                    <div class="card-body">

                                        <div class="row">

                                            {{!-- Círculos de apoyo --}}
                                            <div class="col-12 col-lg-6">

                                                <div class="form-group">
                                                    <label> Círculos de apoyo </label>
                                                    <textarea name="supportCircle" id="supportCircle"
                                                        class="form-control" data-toggle="autosize"></textarea>
                                                </div>

                                            </div>

                                            {{!-- Actividades de ocio --}}
                                            <div class="col-12 col-lg-6">
                                                <div class="form-group">
                                                    <label> Actividades de ocio </label>
                                                    <textarea name="recreationalActivities" id="recreationalActivities"
                                                        class="form-control" data-toggle="autosize"></textarea>
                                                </div>
                                            </div>

                                        </div> <!-- / .row -->

                                    </div>
                                </div>
                            </div>

                            {{!-- Historia psiquiátrica anterior --}}
                            <div class="card">
                                <div class="card-header" id="psychiatricHistory" data-toggle="collapse"
                                    data-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                    <h4 class="mb-0 text-uppercase" style="cursor: pointer; letter-spacing: 0.06rem;">
                                        Historia psiquiátrica anterior
                                    </h4>

                                    <i class="fe fe-chevron-down ml-auto text-secondary" style="cursor: pointer;"></i>
                                </div>

                                <div id="collapseFive" class="collapse" aria-labelledby="psychiatricHistory"
                                    data-parent="#accordion">
                                    <div class="card-body">

                                        <div class="row">

                                            {{!-- Círculos de apoyo --}}
                                            <div class="col-12">

                                                <div class="form-group">
                                                    <label> Círculos de apoyo </label>
                                                    <textarea name="" id="" class="form-control"
                                                        data-toggle="autosize"></textarea>
                                                </div>

                                            </div>

                                            {{!-- Actividades de ocio --}}
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label> Actividades de ocio </label>
                                                    <textarea name="" id="" class="form-control"
                                                        data-toggle="autosize"></textarea>
                                                </div>
                                            </div>

                                        </div> <!-- / .row -->

                                    </div>
                                </div>
                            </div>

                            {{!-- Salud física --}}
                            <div class="card">
                                <div class="card-header" id="physicalHealth" data-toggle="collapse"
                                    data-target="#collapseSix" aria-expanded="false" aria-controls="collapseSix">
                                    <h4 class="mb-0 text-uppercase" style="cursor: pointer; letter-spacing: 0.06rem;">
                                        Salud física
                                    </h4>

                                    <i class="fe fe-chevron-down ml-auto text-secondary" style="cursor: pointer;"></i>
                                </div>

                                <div id="collapseSix" class="collapse" aria-labelledby="physicalHealth"
                                    data-parent="#accordion">
                                    <div class="card-body">

                                        <div class="row">

                                            {{!-- Estado de salud --}}
                                            <div class="col-12">

                                                <div class="form-group">
                                                    <label> Percepción subjetiva del estado de salud (0 — 10) </label>
                                                    <input type="number" name="healthStatus" min="0" max="10" class="form-control">
                                                </div>

                                            </div>

                                            {{!-- Medicación --}}
                                            <div class="col-12 col-lg-6">
                                                <div class="form-group">
                                                    <label> Medicación </label>
                                                    <textarea name="medication" id="medication" class="form-control"
                                                        data-toggle="autosize"></textarea>
                                                </div>
                                            </div>

                                            {{!-- Síntomas --}}
                                            <div class="col-12 col-lg-6">
                                                <div class="form-group">
                                                    <label> Síntomas </label>
                                                    <textarea name="symptoms" id="symptoms" class="form-control"
                                                        data-toggle="autosize"></textarea>
                                                </div>
                                            </div>

                                        </div> <!-- / .row -->

                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>

                    {{!-- Botones --}}
                    <div class="row">
                        <div class="col-12">

                            <div class="form-group">
                                <button class="btn btn-block btn-primary lift">
                                    Crear ficha de paciente
                                </button>

                                <a href="/dashboard/pacientes" class="btn btn-block btn-link text-muted">
                                    Cancelar
                                </a>
                            </div>

                        </div>
                    </div>

                </form>



            </div>



        </div>

    </div>
</div> <!-- / .row -->
</div>