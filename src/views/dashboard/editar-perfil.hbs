<div class="main-content">
    <div class="container-fluid">
        <div class="row justify-content-center">

            <div class="col-12 col-lg-10 col-xl-8">

                {{!-- Header --}}
                <div class="header mt-md-5">

                    {{>messages}}

                    <div class="header-body">
                        <div class="row align-items-center">
                            <div class="col">

                                <h6 class="header-pretitle">
                                    Administradora
                                </h6>

                                {{!-- ítulo --}}
                                <h1 class="header-title">
                                    Configuración
                                </h1>

                            </div>
                        </div> <!-- / .row -->
                        <div class="row align-items-center">
                            <div class="col">

                                <!-- Nav -->
                                <ul class="nav nav-tabs nav-overflow header-tabs">
                                    <li class="nav-item">
                                        <a href="#!" class="nav-link active">
                                            General
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#!" class="nav-link">
                                            Perfil
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#!" class="nav-link">
                                            Notificaciones
                                        </a>
                                    </li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>

                {{!-- Form --}}
                <form action="/dashboard/perfil?_method=PUT" method="POST" class="mb-4" enctype="multipart/form-data">

                    <div class="row">

                        {{!-- Avatar --}}
                        <div class="col-12 col-md-6 mb-4">
                            <div class="avatar avatar-xxl">
                                <img src="{{user.avatar}}" alt="{{user.name}}" class="avatar-img rounded-circle">
                            </div>
                        </div>

                        {{!-- Cambiar foto de perfil --}}
                        <div class="col-12 col-md-6">
                            <div class="input-group ">

                                <div class="custom-file">
                                    <input type="file" name="file" class="custom-file-input" id="inputGroupFile01"
                                        aria-describedby="inputGroupFileAddon01">

                                    <label class="custom-file-label" for="inputGroupFile01">Cambiar foto de
                                        perfil</label>
                                </div>

                            </div>
                        </div>

                        {{!-- Nombre --}}
                        <div class="col-12 col-md-6">
                            <div class="form-group">

                                <label> Nombre </label>

                                <input type="text" class="form-control" name="name" value="{{user.name}}" required>

                            </div>
                        </div>

                        {{!-- Usuario --}}
                        <div class="col-12 col-md-6">
                            <div class="form-group">

                                <label> Usuario </label>

                                <input type="text" class="form-control" name="username" value="{{user.username}}"
                                    required>

                            </div>

                        </div>

                        {{!-- Biografía --}}
                        <div class="col-12">
                            <div class="form-group">

                                <label class="mb-1"> Bio </label>

                                <small class="form-text text-muted">
                                    Esta biografía aparecerá visible para tus artículos del blog
                                </small>

                                <textarea name="bio" class="form-control" maxlength="180" data-toggle="autosize"
                                    style="resize: none;" required>{{user.bio}}</textarea>



                            </div>

                        </div>

                        {{!-- Correo electrónico --}}
                        <div class="col-12 col-md-6">
                            <div class="form-group">

                                <label class="mb-1"> Correo electrónico </label>

                                <input type="email" class="form-control" name="email" value="{{user.email}}" required>

                            </div>
                            
                             <button type="submit" class="btn btn-primary lift mt-2">
                                Editar perfil
                            </button>
                        </div>

                        <div class="col-12 col-md-6">

                            <!-- Birthday -->
                            <div class="form-group">

                                <!-- Label -->
                                <label>
                                    Birthday
                                </label>

                                <!-- Input -->
                                <input type="text" class="form-control">

                            </div>
                        </div>

                        


                    </div> <!-- / .row -->
                </form>

                <!-- Divider -->
                <hr class="mt-4 mb-5">
                {{!-- Pendiente: password reset. --}}
                {{!-- Cambiar contraseña --}}
                <form action="" class="mb-4">
                    <div class="row">
                        <div class="col-12 col-md-6 order-md-2">

                            <!-- Card -->
                            <div class="card bg-light border ml-md-4">
                                <div class="card-body">

                                    <!-- Text -->
                                    <p class="mb-2">
                                        Requisitos de la contraseña
                                    </p>

                                    <!-- Text -->
                                    <p class="small text-muted mb-2">
                                        Para cambiar tu contraseña, debes cumplir los siguientes requirimientos:
                                    </p>

                                    <!-- List group -->
                                    <ul class="small text-muted pl-4 mb-0">
                                        <li>
                                            Longitud mínima de 8 carácteres.
                                        </li>
                                        <li>
                                            Debe incluir un carácter especial.
                                        </li>
                                        <li>
                                            Debe incluir un número.
                                        </li>
                                        <li>
                                            No puede ser igual a la contraseña anterior.
                                        </li>
                                    </ul>

                                </div>
                            </div>

                        </div>

                        <div class="col-12 col-md-6">

                            {{!-- Contraseña --}}
                <div class="form-group">

                    <label> Password </label>
                    <input type="password" class="form-control">

                </div>

                {{!-- Nueva contraseña --}}
                <div class="form-group">

                    <label> New password </label>
                    <input type="password" class="form-control">

                </div>

                {{!-- Confirmar nueva contraseña --}}
                <div class="form-group">

                    <label> Confirmar nueva contraseña </label>
                    <input type="password" class="form-control">

                </div>

                {{!-- Actualizar contraseña --}}
                <button type="submit" class="btn btn-primary lift">
                    Actualizar contraseña
                </button>

            </div>
        </div> <!-- / .row -->

        </form>
        



    </div>
</div> <!-- / .row -->
</div>

</div> <!-- / .main-content -->