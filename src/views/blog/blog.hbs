{{!-- Entradas --}}
<section class="pt-7 pt-md-10 bg-light">
    <div class="container">

        <!-- Heading -->
        <h2 class="mb-5 font-weight-bold">
            Últimas entradas
        </h2>

        <!-- ||| Entradas del Blog ||| -->
        <div class="row">

            {{#each blogPost}}
            <!-- /// Entrada 1 /// -->
            <div class="col-12 col-lg-4 d-flex my-5">

                <!-- Card -->
                <div class="card mb-6 mb-lg-0 shadow-light-lg lift lift-lg">

                    <!-- Imagen -->
                    <a class="card-zoom" href="/blog/{{slug}}">
                        <img src="{{coverURL}}" alt="..." class="img-fluid card-img-top">
                    </a>

                    <!-- Shape -->
                    <div class="position-relative">
                        <div class="shape shape-fluid-x shape-bottom svg-shim text-white">
                            <svg viewBox="0 0 2880 48" fill="none">
                                <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor" />
                            </svg>
                        </div>
                    </div>

                    <!-- Body -->
                    <a class="card-body" href="/blog/{{slug}}">

                        {{!-- <!-- Categoría de la entrada -->
                        <div class="position-relative text-right mt-n8 mr-n4 mb-3">
                            <span class="badge badge-pill badge-primary">
                                <span class="h6 text-uppercase">Neuropsicología</span>
                            </span>
                        </div> --}}

                        <!-- Heading -->
                        <h3> {{title}} </h3>

                        <!-- Text -->
                        <p class="mb-0 text-muted">
                            {{description}}
                        </p>
                    </a>

                    <!-- Meta -->
                    <a class="card-meta mt-auto" href="#!">

                        <!-- Divisor -->
                        <hr class="card-meta-divider">

                        <i class="fe fe-clock text-muted mr-2 mb-0"></i>

                        <h6 class="text-uppercase text-muted mr-2 mb-0"> 10 min. </h6>



                        <!-- Autor -->


                        <!-- Fecha -->
                        <p class="h6 text-uppercase text-muted mb-0 ml-auto">
                            {{date createdAt "MMM DD, YYYY"}}
                        </p>

                        <i class="fe fe-calendar text-muted ml-2 mb-1"></i>
                    </a>

                </div>

            </div>
            {{/each}}


        </div> <!-- / .row -->



    </div> <!-- / .row -->

    </div> <!-- / .container -->
</section>

{{!-- Suscripción Newsletter --}}
<section class="pt-7 pt-md-10 bg-light">

    <div class="container py-6 py-md-8 border-top border-bottom border-gray-300">
        <div class="row align-items-center">

            <div class="col-12 col-md">
            
                <!-- Heading -->
                <h3 class="mb-1 font-weight-bold" style="font-size: 1.80rem;">
                    Recibe nuestras historias
                </h3>

                <!-- Text -->
                <p class="font-size-lg text-muted mb-6 mb-md-0">
                    Suscríbete a nuestro newsletter
                </p>

            </div>
            <div class="col-12 col-md-5">

                <!-- Form -->
                <form action="/subscribirse" method="POST">
                    <div class="row">
                        <div class="col">

                            <!-- Input -->
                            <input type="email" name="email" class="form-control" placeholder="Tu correo eléctronico" required>

                        </div>
                        <div class="col-auto ml-n5">

                            <!-- Button -->
                            <button class="btn btn-primary lift" type="submit">
                                Suscribirse
                            </button>

                        </div>
                    </div> <!-- / .row -->
                </form>

            </div>

        </div> <!-- / .row -->
    </div> <!-- / .container -->
</section>